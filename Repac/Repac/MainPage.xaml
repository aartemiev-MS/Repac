<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:forms="clr-namespace:Plugin.MediaManager.Forms;assembly=Plugin.MediaManager.Forms"
             mc:Ignorable="d"
             x:Class="Repac.MainPage">
    <Grid>
        <Grid BackgroundColor="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.55*"/>
                <RowDefinition Height="0.9*"/>
            </Grid.RowDefinitions>

            <Grid x:Name="Header">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="1.7*"/>
                </Grid.ColumnDefinitions>
                <Label 
                    x:Name="SmallConsole"
                    Grid.Row="0"
                    FontSize="Micro"
                    IsVisible="false"/>
                <Image Source="logo_tinng.png"  
                       x:Name="HeaderLogo"
                       HorizontalOptions="Start"
                       Margin="40,0,0,0"
                       WidthRequest="200"
                       Grid.Row="0">
                </Image>
                <StackLayout x:Name="UserInfo"
                             Grid.Column="1"
                             Margin="0,15,0,0"
                             IsVisible="True" 
                             Orientation="Horizontal">
                    <Grid>
                        <StackLayout HorizontalOptions="Fill">
                            <Label x:Name="ProfileReport1"
                                   Text="Bonjour Fragadan banjir Sandur Pitshman,"
                                   TextColor="Black"
                                   FontSize="Subtitle"/>
                            <StackLayout Orientation="Horizontal">
                                <Label x:Name="ProfileReport2"
                                   HorizontalOptions="Start"
                                   Text="Crédits manquants: 4"
                                   TextColor="Red"
                                   Margin="0,0,20,0"
                                   FontSize="Small"/>
                                <Label x:Name="ProfileReport3"
                                   HorizontalOptions="End"
                                   Text="Crédits au compte: 0"
                                   TextColor="#24a9e1"
                                   FontSize="Small"/>
                            </StackLayout>
                        </StackLayout>
                    </Grid>
                </StackLayout>

                <Image x:Name="UserIcon" 
                               Source="PhilippesIcon_transparent.png"
                               WidthRequest="80"
                             Grid.Column="1"
                               Margin="-10,0,0,0"
                               HorizontalOptions="End"/>
                <Grid x:Name="UserLine"
                      BackgroundColor="Gray"
                      Grid.Column="1"
                      Margin="0,0,80,0"
                      VerticalOptions="End"
                      HeightRequest="1"/>
            </Grid>
            <Grid  Grid.Row="1" Grid.RowSpan="2">
                <StackLayout x:Name="FirstScreen"
                             BackgroundColor="White"
                             VerticalOptions="Center" 
                             IsVisible="true">
                    <Image Source="logo_tinng.png"
                           HeightRequest="150"
                           x:Name="WelcomeLogo"
                           HorizontalOptions="Center"/>
                    <forms:VideoView HorizontalOptions="Center" 
                                     WidthRequest="400"
                                     HeightRequest="100"
                                     BackgroundColor="Orange"/>
                </StackLayout>

                <Grid x:Name="SecondScreen"
                  IsVisible="false">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="1.3*"/>
                    </Grid.ColumnDefinitions>
                    <Grid>
                        <Button x:Name="SecondScreenCounter"
                            HorizontalOptions="Center" 
                            VerticalOptions="Center" 
                            BorderWidth="3"
                            BorderColor="Black"
                            CornerRadius="25"
                            WidthRequest="200"
                            HeightRequest="200"
                            Text="0"
                            TextColor="Black"
                            FontSize="Header"
                            Margin="40,-20,0,0"
                            BackgroundColor="White"/>
                    </Grid>
                    <StackLayout
                        Grid.Column="1"
                        HorizontalOptions="End"
                        VerticalOptions="Start">
                        <Button
                            Text="Animation place"
                            BackgroundColor="#8dc73f"
                            WidthRequest="450"
                            HeightRequest="100"/>
                        <StackLayout Orientation="Horizontal" 
                                     Spacing="0">
                            <Label TextColor="Black" 
                               FontSize="12"
                                   VerticalOptions="Center"
                               Margin="20,0,20,0"
                               Text="Présentez votre porte-clé Tinng! à la fin de l'achat."/>
                            <Image Source="key_black.png" HeightRequest="50"/>
                        </StackLayout>
                    </StackLayout>
                </Grid>

                <Grid x:Name="ThirdScreen"
                  IsVisible="false">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="0.7*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackLayout Margin="40,0,0,0"
                                 VerticalOptions="Center">

                        <Grid>
                            <Button x:Name="ThirdScreenItemsCounter"
                                    TextColor="black"
                                    HorizontalOptions="Center" 
                                    BorderWidth="2"
                                    BorderColor="Black"
                                    CornerRadius="25"
                                    WidthRequest="200"
                                    HeightRequest="200"
                                    Text="1"
                                    FontSize="120"
                                    BackgroundColor="White"/>
                            <Label Text="Scannés"
                                   HorizontalOptions="Center" 
                                   TextColor="black"
                                   FontSize="Small"
                                   VerticalOptions="End"
                                   Margin="0,0,0,15"/>
                        </Grid>
                    </StackLayout>

                    <StackLayout Grid.Column="1"
                             VerticalOptions="Center">
                        <Grid>
                            <Button x:Name="CreditsToBuyLabel"
                                    HorizontalOptions="Center" 
                                    BorderWidth="2"
                                    BorderColor="Black"
                                    TextColor="#8dc73f"
                                    CornerRadius="25"
                                    WidthRequest="150"
                                    HeightRequest="150"
                                    Text="0"
                                    FontSize="50"
                                    BackgroundColor="White"/>
                            <Label Text="Crédits à acheter"
                                   HorizontalOptions="Center" 
                                   TextColor="black"
                                   FontSize="Small"
                                   FontAttributes="Italic"
                                   VerticalOptions="End"
                                   Margin="0,0,0,10"/>
                        </Grid>
                        <Button x:Name="AddCreditsButton"
                                Text="Plus de crédits?" 
                                BorderWidth="1"
                                BorderColor="Black"
                                TextColor="black"
                                CornerRadius="10"
                                HorizontalOptions="Center"
                                Clicked="AddCreditsButton_Clicked"/>
                        <Button x:Name="ResetCreditsButton"
                                Text="Reset" 
                                BorderWidth="1"
                                BorderColor="Black"
                                TextColor="black"
                                CornerRadius="10"
                                HorizontalOptions="Center"
                                Clicked="ResetCreditsButton_Clicked"/>

                        <StackLayout x:Name="AddCreditsOptionsButtons"
                            Orientation="Horizontal"
                            HorizontalOptions="Center">
                            <Button HorizontalOptions="Center"
                                    WidthRequest="70"
                                    Text="+1"
                                    BorderWidth="1"
                                    BorderColor="Black"
                                    TextColor="black"
                                    CornerRadius="10"
                                    Clicked="ButtonPlus1_Clicked"/>
                            <Button HorizontalOptions="Center"
                                    WidthRequest="70"
                                    Text="+3"
                                    BorderWidth="1"
                                    BorderColor="Black"
                                    TextColor="black"
                                    CornerRadius="10"
                                    Clicked="ButtonPlus3_Clicked"/>
                        </StackLayout>
                    </StackLayout>

                    <StackLayout Grid.Column="2"
                                 Margin="0,0,40,0"
                                 VerticalOptions="Center">
                        <Grid>
                            <Button x:Name="ThirdScreenPaymentCounter"
                                    HorizontalOptions="Center" 
                                    BorderWidth="2"
                                    BorderColor="Black"
                                    TextColor="black"
                                    CornerRadius="25"
                                    WidthRequest="200"
                                    HeightRequest="150"
                                    Text="5.00$"
                                    FontSize="50"
                                    BackgroundColor="White"/>
                        </Grid>
                        <StackLayout  Margin="10,0,10,0"
                                      Orientation="Horizontal"
                                      Grid.Column="2"
                                      HorizontalOptions="Center"
                                      VerticalOptions="Center"
                                      HeightRequest="50">
                            <StackLayout VerticalOptions="Center">
                                <Label VerticalOptions="Center"
                                       FontSize="Micro"
                                       TextColor="Black"
                                       Text="Tapez votre badge pour"/>
                                <Label VerticalOptions="Center"
                                       FontSize="Micro"
                                       TextColor="Black"
                                       Text="effectuer le paiement."/>
                            </StackLayout>
                            <Image Source="key_black"
                                   x:Name="ThirdSlideKey"
                                   HeightRequest="5"/>
                        </StackLayout>

                    </StackLayout>
                </Grid>

                <StackLayout x:Name="FourthScreen" 
                         IsVisible="false"
                                 VerticalOptions="Center">
                    <StackLayout Orientation="Horizontal" 
                                 HorizontalOptions="Center">
                        <Grid>
                            <Button x:Name="FourthScreenCounterUsed"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    BorderWidth="2"
                                    BorderColor="Black"
                                    TextColor="#CC0000"
                                    CornerRadius="25"
                                    WidthRequest="200"
                                    HeightRequest="200"
                                    Text="1"
                                    FontSize="120"
                                    BackgroundColor="White"/>
                            <Label Text="Crédits utilisés"
                                   HorizontalOptions="Center" 
                                   TextColor="black"
                                   FontSize="Small"
                                   VerticalOptions="End"
                                   Margin="0,0,0,35"/>
                        </Grid>

                        <StackLayout>
                            <Image Source="Check_transparent.png"
                                   HorizontalOptions="Center" 
                                   x:Name="SuccessLabel"
                                   WidthRequest="200"
                                   Margin="25,0,0,0"/>
                            <Label x:Name="PaymentSuccessLabel"
                                Text="Paiement effectué!"
                                   TextColor="black"
                                   HorizontalOptions="Center"/>
                            <Label Text="Merci!"
                                   TextColor="black"
                                   HorizontalOptions="Center"/>
                        </StackLayout>

                        <Grid>
                            <Button x:Name="FourthScreenCounterAvailible"
                                    HorizontalOptions="Center" 
                                    VerticalOptions="Center"
                                    BorderWidth="2"
                                    BorderColor="Black"
                                    TextColor="#8dc73f"
                                    CornerRadius="25"
                                    WidthRequest="200"
                                    HeightRequest="200"
                                    Text="4"
                                    FontSize="120"
                                    BackgroundColor="White"/>
                            <Label Text="Crédits disponibles"
                                   HorizontalOptions="Center" 
                                   TextColor="black"
                                   FontSize="Small"
                                   VerticalOptions="End"
                                   Margin="0,0,0,35"/>
                        </Grid>
                    </StackLayout>
                </StackLayout>

                <Grid x:Name="AdminScreen" IsVisible="false">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.3*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackLayout
                        HorizontalOptions="End"
                        VerticalOptions="Start">
                        <Button
                            Text="Animation place"
                            BackgroundColor="#8dc73f"
                            WidthRequest="450"
                            HeightRequest="100"/>

                        <StackLayout Orientation="Horizontal" 
                                     Spacing="0">
                            <Label TextColor="Black"                                                                 
                                   FontSize="12"
                                   VerticalOptions="Center"
                                   Margin="20,0,0,0"
                                   Text="Présentez votre porte-clé Tinng! à la fin de l'operation."/>
                            <Image Source="key_black.png"
                                   Margin="-15,0,0,0"
                                   HeightRequest="50"/>
                        </StackLayout>
                    </StackLayout>

                    <Grid Grid.Column="1">
                        <Button x:Name="AdminScreenCounter"
                                HorizontalOptions="Center" 
                                VerticalOptions="Center" 
                                BorderWidth="3"
                                BorderColor="Black"
                                TextColor="black"
                                CornerRadius="25"
                                WidthRequest="200"
                                HeightRequest="200"
                                Text="0"
                                FontSize="Header"
                                Margin="0,-20,40,0"
                                BackgroundColor="PaleVioletRed"/>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>

