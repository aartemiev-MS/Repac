                    <StackLayout Orientation="Horizontal">
                        <Button WidthRequest="100"
                                HeightRequest="100"
                                BackgroundColor="white"
                                BorderColor="black"
                                BorderWidth="1"
                                CornerRadius="20"
                                Text="1"
                                FontSize="60"
                                VerticalOptions="Center"
                                HorizontalOptions="Center"
                                Clicked="ButtonKey1_Clicked"/>
                        <Button WidthRequest="100"
                                HeightRequest="100"
                                BackgroundColor="white"
                                BorderColor="black"
                                BorderWidth="1"
                                CornerRadius="20"
                                Text="2"
                                FontSize="60"
                                VerticalOptions="Center"
                                HorizontalOptions="Center"
                                Clicked="ButtonKey2_Clicked"/>
                        <Button WidthRequest="100"
                                HeightRequest="100"
                                BackgroundColor="white"
                                BorderColor="black"
                                BorderWidth="1"
                                CornerRadius="20"
                                Text="3"
                                FontSize="60"
                                VerticalOptions="Center"
                                HorizontalOptions="Center"
                                Clicked="ButtonKey3_Clicked"/>

                    </StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Button WidthRequest="100"
                                    HeightRequest="100"
                                    BackgroundColor="white"
                                    BorderColor="black"
                                    BorderWidth="1"
                                    CornerRadius="20"
                                    Text="4"
                                    FontSize="60"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center"
                                Clicked="ButtonKey4_Clicked"/>
                        <Button WidthRequest="100"
                                    HeightRequest="100"
                                    BackgroundColor="white"
                                    BorderColor="black"
                                    BorderWidth="1"
                                    CornerRadius="20"
                                    Text="5"
                                    FontSize="60"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center"
                                Clicked="ButtonKey5_Clicked"/>
                        <Button WidthRequest="100"
                                    HeightRequest="100"
                                    BackgroundColor="white"
                                    BorderColor="black"
                                    BorderWidth="1"
                                    CornerRadius="20"
                                    Text="6"
                                    FontSize="60"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center"
                                Clicked="ButtonKey6_Clicked"/>

                    </StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Button WidthRequest="100"
                                    HeightRequest="100"
                                    BackgroundColor="white"
                                    BorderColor="black"
                                    BorderWidth="1"
                                    CornerRadius="20"
                                    Text="7"
                                    FontSize="60"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center"
                                Clicked="ButtonKey7_Clicked"/>
                        <Button WidthRequest="100"
                                    HeightRequest="100"
                                    BackgroundColor="white"
                                    BorderColor="black"
                                    BorderWidth="1"
                                    CornerRadius="20"
                                    Text="8"
                                    FontSize="60"
                                    VerticalOptions="Center"
