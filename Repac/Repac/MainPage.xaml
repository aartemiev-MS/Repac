                                    HorizontalOptions="Center" 
                                    BorderWidth="2"
                                    BorderColor="#646464"
                                    TextColor="#8dc73f"
                                    CornerRadius="25"
                                    WidthRequest="225"
                                    HeightRequest="225"
                                    Text="0"
                                    FontSize="120"
                                    BackgroundColor="White"/>
                            <Label Text="Crédits à acheter"
                                   HorizontalOptions="Center" 
                                   TextColor="black"
                                   FontSize="Small"
                                   FontAttributes="Italic"
                                   VerticalOptions="End"
                                   Margin="0,0,0,10"/>
                        </Grid>

                        <StackLayout x:Name="AddCreditsButton" Orientation="Horizontal">
                            <Grid HorizontalOptions="Center"  
                                  VerticalOptions="Center"
                                  HeightRequest="50"                  
                                  WidthRequest="225"
                                  Margin="25,0,0,0">
                            <Frame CornerRadius="10" Padding="0">
                                <magic:GradientView VerticalOptions="FillAndExpand">
                                    <magic:GradientView.GradientSource>
                                        <magic:GradientCollection>
                                            <magic:LinearGradient Angle="90">
                                                <magic:GradientStop Color="#BBBBBB" Offset="0" />
                                                <magic:GradientStop Color="#F2F2F2" Offset="0.6" />
                                                <magic:GradientStop Color="#BBBBBB" Offset="1" />
                                            </magic:LinearGradient>
                                        </magic:GradientCollection>
                                    </magic:GradientView.GradientSource>
                                </magic:GradientView>
                            </Frame>
                            <Button Text="Plus de crédits?" 
                                    BorderWidth="1"
                                    BorderColor="Black"
                                    TextColor="black"
                                    BackgroundColor="Transparent"
                                    CornerRadius="10"
                                    HorizontalOptions="Center"
                                    FontSize="20"
                                    HeightRequest="50"
                                    WidthRequest="225"
                                    Clicked="AddCreditsButton_Clicked"/>
                        </Grid>
                            <Grid WidthRequest="50" HeightRequest="50" Margin="-25,25,0,-25">
                                <Image x:Name="ClickIcon" Aspect="AspectFit" Source="clickIcon.png"/>
                            </Grid>
                        </StackLayout>

                        <Grid x:Name="ResetCreditsButton"
                              HorizontalOptions="Center"                              
                              WidthRequest="100">
                            <Frame CornerRadius="10" Padding="0">
                                <magic:GradientView VerticalOptions="FillAndExpand">
                                    <magic:GradientView.GradientSource>
                                        <magic:GradientCollection>
                                            <magic:LinearGradient Angle="90">
                                                <magic:GradientStop Color="#BBBBBB" Offset="0" />
                                                <magic:GradientStop Color="#F2F2F2" Offset="0.6" />
                                                <magic:GradientStop Color="#BBBBBB" Offset="1" />
                                            </magic:LinearGradient>
                                        </magic:GradientCollection>
                                    </magic:GradientView.GradientSource>
                                </magic:GradientView>
                            </Frame>
                            <Button Text="Reset" 
                                    BorderWidth="1"
                                    BorderColor="Black"
                                    TextColor="black"
                                    BackgroundColor="Transparent"
                                    CornerRadius="10"
                                    HorizontalOptions="Center"
                                    FontSize="20"
                                    HeightRequest="50"
                                    WidthRequest="100"
                                    Clicked="ResetCreditsButton_Clicked"/>
                        </Grid>

                        <StackLayout x:Name="AddCreditsOptionsButtons"
                            Orientation="Horizontal"
                            HorizontalOptions="Center">
                            <Grid HorizontalOptions="Center"   
                                  WidthRequest="75">
                                <Frame CornerRadius="10" Padding="0">
                                    <magic:GradientView VerticalOptions="FillAndExpand">
                                        <magic:GradientView.GradientSource>
                                            <magic:GradientCollection>
                                                <magic:LinearGradient Angle="90">
                                                    <magic:GradientStop Color="#BBBBBB" Offset="0" />
                                                    <magic:GradientStop Color="#F2F2F2" Offset="0.6" />
                                                    <magic:GradientStop Color="#BBBBBB" Offset="1" />
                                                </magic:LinearGradient>
                                            </magic:GradientCollection>
                                        </magic:GradientView.GradientSource>
                                    </magic:GradientView>
                                </Frame>
                                <Button Text="+1" 
                                    BorderWidth="1"
                                    BorderColor="Black"
                                    TextColor="black"
                                    BackgroundColor="Transparent"
                                    CornerRadius="10"
                                    HorizontalOptions="Center"
                                    FontSize="20"
                                    HeightRequest="50"
                                    WidthRequest="75"
                                    Clicked="ButtonPlus1_Clicked"/>
                            </Grid>
                            <Grid HorizontalOptions="Center"   
                                  WidthRequest="75">
                                <Frame CornerRadius="10" Padding="0">
                                    <magic:GradientView VerticalOptions="FillAndExpand">
                                        <magic:GradientView.GradientSource>
                                            <magic:GradientCollection>
                                                <magic:LinearGradient Angle="90">
                                                    <magic:GradientStop Color="#BBBBBB" Offset="0" />
                                                    <magic:GradientStop Color="#F2F2F2" Offset="0.6" />
                                                    <magic:GradientStop Color="#BBBBBB" Offset="1" />
                                                </magic:LinearGradient>
                                            </magic:GradientCollection>
                                        </magic:GradientView.GradientSource>
                                    </magic:GradientView>
                                </Frame>
                                <Button Text="+3" 
                                    BorderWidth="1"
                                    BorderColor="Black"
                                    TextColor="black"
                                    BackgroundColor="Transparent"
                                    CornerRadius="10"
                                    HorizontalOptions="Center"
                                    FontSize="20"
                                    HeightRequest="50"
                                    WidthRequest="75"
                                    Clicked="ButtonPlus3_Clicked"/>
                            </Grid>
                        </StackLayout>
                    </StackLayout>

                    <StackLayout Grid.Column="2"
                                 Margin="0,0,40,0"
                                 VerticalOptions="Center">
                        <Frame HeightRequest="190" WidthRequest="325"  VerticalOptions="Center" HorizontalOptions="Center" CornerRadius="20" BorderColor="#646464">
                            <Label VerticalOptions="Center" HorizontalOptions="Center">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="10" x:Name="ThirdScreenPaymentCounter" TextColor="#646464" FontSize="120" />
                                        <Span Text=".00$" TextColor="#646464" FontSize="60" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </Frame>

                        <StackLayout  Margin="10,0,10,0"
                                      Orientation="Horizontal"
                                      Grid.Column="2"
                                      HorizontalOptions="Center"
                                      VerticalOptions="Center"
                                      HeightRequest="50">
                            <StackLayout VerticalOptions="Center">
                                <Label VerticalOptions="Center"
                                       FontSize="18"
                                       TextColor="Black"
                                       Text="Tapez votre badge pour"/>
                                <Label VerticalOptions="Center"
                                       FontSize="18"
                                       TextColor="Black"
                                       Text="effectuer le paiement."/>
                            </StackLayout>
                            <Image Source="key_black"
                                   x:Name="ThirdSlideKey"
                                   HeightRequest="50"/>
                        </StackLayout>

                    </StackLayout>
                </Grid>

                <StackLayout x:Name="FourthScreenMain" 
                             IsVisible="false"
                             VerticalOptions="Center">
                    <StackLayout Orientation="Horizontal" 
                                 HorizontalOptions="Center">
                        <Grid>
                            <Button x:Name="FourthScreenCounterUsed"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    BorderWidth="2"
                                    BorderColor="#646464"
                                    TextColor="#CC0000"
                                    CornerRadius="25"
                                    WidthRequest="325"
                                    HeightRequest="325"
                                    Text="1"
                                    FontSize="200"
                                    BackgroundColor="White"/>
                            <Label Text="Crédits utilisés"
                                   HorizontalOptions="Center" 
                                   TextColor="#646464"
                                   FontSize="Small"
                                   VerticalOptions="End"
                                   Margin="0,0,0,35"/>
                        </Grid>

                        <StackLayout>
                            <Image Source="Check_transparent.png"
                                   HorizontalOptions="Center" 
                                   x:Name="SuccessLabel"
                                   WidthRequest="250"
                                   Margin="25,0,0,0"/>
                            <Label x:Name="PaymentSuccessLabel"
                                   Text="Paiement effectué!"
                                   FontSize="20"
                                   TextColor="black"
                                   HorizontalOptions="Center"/>
                            <Label Text="Merci!"
                                   FontSize="20"
                                   TextColor="black"
                                   HorizontalOptions="Center"/>
                        </StackLayout>

                        <Grid>
                            <Button x:Name="FourthScreenCounterAvailible"
                                    HorizontalOptions="Center" 
                                    VerticalOptions="Center"
                                    BorderWidth="2"
                                    BorderColor="#646464"
                                    TextColor="#8dc73f"
                                    CornerRadius="25"
                                    WidthRequest="325"
                                    HeightRequest="325"
                                    Text="4"
                                    FontSize="200"
                                    BackgroundColor="White"/>
                            <Label Text="Crédits disponibles"
                                   HorizontalOptions="Center" 
                                   TextColor="#646464"
                                   FontSize="Small"
                                   VerticalOptions="End"
                                   Margin="0,0,0,35"/>
                        </Grid>
                    </StackLayout>
                </StackLayout>

                <Grid x:Name="AdminScreen"
                      IsVisible="true">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.3*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackLayout
                        HorizontalOptions="End"
                        VerticalOptions="Center">
                        <Image WidthRequest="450"
                               HeightRequest="100"
                               Source="conveyor.png"/>
                        <StackLayout Orientation="Horizontal" 
                                     Spacing="0"
                                     Margin="20,0,20,0">
                            <Label VerticalOptions="Center">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="Présentez votre porte-clé " TextColor="Black" FontSize="20" />
                                        <Span Text="Tinng! " FontAttributes="Bold" TextColor="Black" FontSize="20"/>
