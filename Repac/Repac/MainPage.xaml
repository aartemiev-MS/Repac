    <Grid>
        <Grid BackgroundColor="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.55*"/>
                <RowDefinition Height="0.9*"/>
            </Grid.RowDefinitions>

            <Grid x:Name="Header" IsVisible="false">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="1.7*"/>
                </Grid.ColumnDefinitions>
                <Label 
                    x:Name="SmallConsole"
                    Grid.Row="0"
                    FontSize="Micro"
                    IsVisible="false"/>
                <Image Source="logo_tinng.png"  
                       x:Name="HeaderLogo"
                       HorizontalOptions="Center"
                       Margin="40,0,0,0"
                       WidthRequest="325"
                       Grid.Row="0">
                </Image>
                <StackLayout x:Name="UserInfo" 
                             Grid.Column="1"
                             Margin="20,0,0,0"
                             IsVisible="false" 
                             Orientation="Horizontal">
                    <Grid>
                        <StackLayout VerticalOptions="Center">
                            <Label x:Name="ProfileReport1"
                                   Text="Bonjour Fragadan banjir Sandur Pitshman,"
                                   TextColor="Black"
                                   FontSize="20"/>
                            <StackLayout Orientation="Horizontal">
                                <Label x:Name="ProfileReport2"
                                   HorizontalOptions="Start"
                                   Text="Crédits manquants: 4"
                                   TextColor="Red"
                                   Margin="0,0,20,0"
                                   FontSize="20"/>
                                <Label x:Name="ProfileReport3"
                                   HorizontalOptions="End"
                                   Text="Crédits au compte: 0"
                                   TextColor="#24a9e1"
                                   FontSize="20"/>
                            </StackLayout>
                        </StackLayout>
                    </Grid>
                </StackLayout>

                <Image x:Name="UserIcon" 
                       Source="PhilippesIcon_transparent.png"
                       WidthRequest="80"
                       Grid.Column="1"
                       Margin="-10,0,50,0"
                       HorizontalOptions="End"/>
                <Grid x:Name="UserLine"
                      BackgroundColor="Gray"
                      Grid.Column="1"
                      Margin="0,0,80,0"
                      VerticalOptions="End"
                      HeightRequest="1"/>
                <Label x:Name="TakeOutHeaderLabel" 
                       Grid.Column="1"
                       Margin="20,0,0,0"
                       TextColor="Black"
                       FontSize="20"
                       VerticalTextAlignment="Center"
                       Text="Bonjour Renaud Dupin,&#10;Voici votre liste de commandes actives
"/>
            </Grid>
            <Grid  Grid.Row="1" Grid.RowSpan="2">
                <StackLayout x:Name="FirstScreen"
                             IsVisible="false"
                             BackgroundColor="White"
                             VerticalOptions="Center" 
                             HorizontalOptions="Center" >
                    <Image Source="logo_tinng.png"
                           HeightRequest="225"
                           x:Name="WelcomeLogo"
                           HorizontalOptions="Center"
                           Margin="0,0,0,0"/>
                    <StackLayout x:Name="StartMessageLabel" HorizontalOptions="Center" Orientation="Horizontal">
                        <Label Text="Tapez votre badge pour commencer" TextColor="Black" FontSize="30"/>
                        <Image x:Name="KeyFirstSlide"  
                               Source="key_black.png" 
                               HeightRequest="50"
                               WidthRequest="100"/>
                    </StackLayout>
                    <!--<Button BackgroundColor="White"
                                Style="{x:StaticResource CaseTextAppearance}"
                                BorderWidth="1"
                                BorderColor="Black"
                                WidthRequest="200"
                                HeightRequest="100"
                                CornerRadius="20"
                                Text="Danny Aubé &#10; 438 732 8548"
                                FontSize="20"
                                VerticalOptions="Start"
                                HorizontalOptions="Center"/>-->

                    <!--<forms:VideoView HorizontalOptions="Center" 
                                     WidthRequest="400"
                                     HeightRequest="100"
                                     BackgroundColor="Orange"/>-->
                    <Image x:Name="ConveyorTemp" Source="conveyor.png" Margin="0,0,0,0"/>


                </StackLayout>

                <Grid x:Name="SecondScreenMain"
                      IsVisible="false">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="17*"/>
                    </Grid.ColumnDefinitions>
                    <Grid>
                        <Button x:Name="SecondScreenCounter"
                            HorizontalOptions="Center" 
                            VerticalOptions="Center" 
                            BorderWidth="3"
                            BorderColor="#646464"
                            CornerRadius="25"
                            WidthRequest="325"
                            HeightRequest="325"
                            Text="0"
                            TextColor="#646464"
                            FontSize="200"
                            Margin="0,0,0,0"
                            BackgroundColor="White"/>
                    </Grid>
                    <StackLayout
                        Grid.Column="1"
                        HorizontalOptions="End"
                        VerticalOptions="Center">
                        <Image WidthRequest="450"
                               HeightRequest="100"
                               Source="conveyor.png"/>
                        <StackLayout Orientation="Horizontal" 
                                     Spacing="0"
                                     Margin="20,0,20,0">
                            <Label VerticalOptions="Center">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="Présentez votre porte-clé " TextColor="Black" FontSize="20" />
                                        <Span Text="Tinng! " FontAttributes="Bold" TextColor="Black" FontSize="20"/>
                                        <Span Text="à la fin de l'achat." TextColor="Black" FontSize="20"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Image x:Name="KeySecondSlide"  Source="Key_black.png" HeightRequest="50"/>
                        </StackLayout>
                    </StackLayout>
                </Grid>

                <Grid x:Name="SecondScreenTakeOut" 
                      IsVisible="false"
                      VerticalOptions="Fill">
                    <ScrollView x:Name="OrdersScroll" VerticalOptions="Center">
                        <StackLayout x:Name="OrdersListLayout" 
                                 IsVisible="true"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Start">
                            <Button BackgroundColor="White"
                                BorderWidth="1"
                                BorderColor="Black"
                                WidthRequest="450"
                                HeightRequest="100"
                                CornerRadius="20"
                                Text="Jennifer"
                                FontSize="40"
                                VerticalOptions="Start"
                                HorizontalOptions="Center"
                                Clicked="ButtonJennifer_Clicked"/>
                        </StackLayout>
                    </ScrollView>

                    <StackLayout x:Name="EmptyOrdersList" 
                                 VerticalOptions="Center"
                                 IsVisible="false">
                            <Label Text="Les commandes s'en viennent!"
