<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Repac.MainPage">
    <Grid>
    <Grid BackgroundColor="White" IsVisible="true">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.16*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.12*"/>
        </Grid.RowDefinitions>
        
        <Grid x:Name="Header">
                <Label
                    x:Name="SmallConsole"
                    Grid.Row="0"
                    FontSize="Micro"/>
                <Image Source="RepacLogo_Transparent.jpg"  
                   Grid.Row="0">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="RepacLogo_Tapped"/>
                </Image.GestureRecognizers>
            </Image>
            <StackLayout x:Name="UserInfo"
                         HorizontalOptions="End"
                         Margin="0,5,20,0"
                         IsVisible="True">
                    <Image Source="PhilippesIcon_transparent.png"
                           HorizontalOptions="EndAndExpand"
                           WidthRequest="80"/>
                    <Label x:Name="ProfileReport"
                           TextColor="DeepPink"/>
                </StackLayout>
        </Grid>
        <Grid  Grid.Row="1">
            <StackLayout x:Name="FirstScreen"
                             BackgroundColor="White"
                             VerticalOptions="CenterAndExpand" 
                             IsVisible="true">
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="FirstScreen_Tapped"/>
                    </StackLayout.GestureRecognizers>
                    <Label Text="Votre service de contenants écologiques réutilisables sans-fil."
                           HorizontalOptions="Center"
                           Margin="0,-20,0,40"
                           FontSize="Medium"/>
                    <Label Text="Vous souhaite la " 
                           HorizontalOptions="Center"
                           FontSize="30"
                           TextColor="Black"/>
                    <Label Text="Bienvenue!"
                           HorizontalOptions="Center"
                           FontSize="50"
                           TextColor="Black"/>
                    <Label Text="Scannez un contenant pour commencer."
                           HorizontalOptions="Center"
                           FontSize="Large"
                           TextColor="DeepPink"/>
            </StackLayout>

            <Grid x:Name="SecondScreen"
                  IsVisible="false">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.2*"/>
                    <RowDefinition Height="0.11*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label x:Name="ItemsScannesLabel" 
                               Text="Items scannés"
                               HorizontalOptions="Center" 
                               FontSize="25"
                               TextDecorations="Underline"
                               TextColor="Black"
                               Grid.Row="0"
                               Grid.RowSpan="2"
                               VerticalOptions="End"/>
                
                <Grid Grid.Row="1"  
                      Grid.RowSpan="2"
                      RowSpacing="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="5*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="1" x:Name="ItemsCounter">
                                <Grid Margin="0"
                                      HorizontalOptions="Center">
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="ItemsCounter_Tapped"/>
                                    </Grid.GestureRecognizers>

                                    <Image x:Name="ItemsCounterBackground"
                                           Opacity="1" 
                                           Source="BlueRoundedSquare.png"/>
                                    <Label x:Name="CounterLabel"
                                           Text="0" 
                                           HorizontalOptions="Center"
                                           FontSize="80" 
                                           VerticalOptions="CenterAndExpand"
                                           TextColor="Black"/>
                                </Grid>
                        </Grid>
                    </Grid>
            </Grid>

            <Grid x:Name="ThirdScreen_Old"
                  IsVisible="False">
                <Grid VerticalOptions="CenterAndExpand">
                    <Grid ColumnSpacing="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="0.22*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0" 
                              Grid.ColumnSpan="2" 
                              BackgroundColor="Black"
                              Margin="0,0,0,60"/>
                            <StackLayout BackgroundColor="White"
                                     Grid.Column="0">
                                <Label Text="Items scannés" 
                                   HorizontalOptions="Center"
                                   FontSize="30" 
                                   TextDecorations="Underline"
                                   TextColor="Black"
                                   LineBreakMode="NoWrap"/>
                            <Grid Margin="60,0,60,60">
                                    <Image Source="BlueRoundedSquare.png"/>
                                    <Label x:Name="CounterLabelLeft_Old" 
                                       Text="0" 
                                       HorizontalOptions="Center"
                                       FontSize="80" 
                                       VerticalOptions="CenterAndExpand"
                                       TextColor="Black"/>
                                </Grid>
                            </StackLayout>
                            <StackLayout BackgroundColor="White" 
                                     Grid.Column="1"
                                     Grid.ColumnSpan="1">
                                <Label Text="Crédits au compte"
                                       LineBreakMode="NoWrap"
                                       HorizontalOptions="Center" 
                                       FontSize="30" 
                                       TextDecorations="Underline"
                                       TextColor="Black"/>
                            <Grid x:Name="CounterGridRight"
                                  Margin="60,0,60,60" >
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                                    </Grid.GestureRecognizers>
                                <Image Source="BlueRoundedSquare.png"/>
                                <Label x:Name="CounterLabelRight" 
                                       Text="0" 
                                       HorizontalOptions="Center"
                                       FontSize="80"
                                       VerticalOptions="CenterAndExpand"
                                       TextColor="Black"/>
                            </Grid>
                        </StackLayout>
                    </Grid>
                </Grid>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1.5*"/>
                            <RowDefinition Height="2.5*"/>
                            <RowDefinition Height="1.5*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Row="1" Grid.Column="2">
                            <StackLayout>
                                <Button x:Name="AddCreditsButton" 
                                BackgroundColor="#00ff00"
                                CornerRadius="25"
                                FontSize="10"
                                Text="Add credits"
                                BorderColor="Black"
                                BorderWidth="1"
                                Margin="0"
                                Clicked="AddProductCredit"/>
                                <Button x:Name="BuyCreditsButton" 
                                BackgroundColor="#00ff00"
                                CornerRadius="25"
                                FontSize="10"
                                Text="Buy credits"
                                BorderColor="Black"
                                BorderWidth="1"
                                Margin="0"
                                Clicked="BuyCreditsButton_Clicked"/>
                            </StackLayout>
                        </Grid>
                    </Grid>

                    <Grid x:Name="CreditsError"
                      Opacity="100"
                      VerticalOptions="End">
                    <Grid ColumnSpacing="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <Label Text="CRÉDITS INSUFFISANTS"
                               TextColor="DarkRed"
                               FontSize="20"
                               Grid.Column="1"
                               HorizontalOptions="Center"
                               VerticalOptions="End"
                               FontAttributes="Bold"
                               Margin="20"
                               LineBreakMode="NoWrap"/>
                    </Grid>
                </Grid>
            </Grid>
            <StackLayout x:Name="ThirdScreen"
                  IsVisible="false">
                    <Label x:Name="FirstLabel" 
                           Text="Bonjour, Philippe!"
                           FontSize="60"
                           TextColor="Black"
                           HorizontalTextAlignment="Center"/>
                    <Label x:Name="SecondLabel" 
                           FontSize="Title"
                           TextColor="Black"
                           Text="Afin de compléter l'achat, vous avez besoin de payer:"
                           HorizontalTextAlignment="Center"/>
                    <Label x:Name="ThirdLabel"
                           Margin="0,-10"
                           FontSize="Title"
                           TextColor="DeepPink"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"/>
                    <Label x:Name="FourthLabel"
                           FontSize="Title"
                           TextColor="DeepPink"
                           Text="3 crédits supplémentaires."
                           HorizontalTextAlignment="Center"/>
                    <Label x:Name="FifthLabel"
                           FontSize="Medium"
                           TextColor="Black"
                           Text="Si cela ne vous convient pas, indiquez au gérant"
                           HorizontalTextAlignment="Center"/>
                    <Label x:Name="SixthLabel"
                           Margin="0,-10,0,50"
                           FontSize="Medium"
                           TextColor="Black"
                           Text="qu'il vous aide à enlever des contenants Tinng!"
                           HorizontalTextAlignment="Center"/>
                    <Label x:Name="SeventhLabel"
                           FontSize="Medium"
                           TextColor="Black"
                           Text="Si cela vous convient:"
                           HorizontalTextAlignment="Center"/>

                </StackLayout>
                
            <StackLayout x:Name="FourthScreen" 
                         IsVisible="false">
                <Label Text="Le paiement a été effectué avec succès."
                       HorizontalOptions="Center"
                       FontSize="Large"
                       TextColor="Black"
                       Margin="0,10,0,0"/>
                <Image Source="Check_transparent.png"
                       WidthRequest="150"/>
                <Label Text="Merci, Philippe!"
                       HorizontalOptions="Center"
                       FontSize="50"
                       TextColor="Black"/>
                </StackLayout>

            <Grid x:Name="AdminScreen" IsVisible="false">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.3*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Label Text="Items scannés" 
                           FontSize="25"
                           HorizontalTextAlignment="Center"
                           Margin="0,20,0,0"
                           TextDecorations="Underline"
                           TextColor="Black"/>
                    
                    <Grid x:Name="AdminItemsCounter"
                          Grid.Row="1">
                        <Grid Margin="0"
                              HorizontalOptions="Center">
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Tapped="ItemsCounter_Tapped"/>
                            </Grid.GestureRecognizers>                            

                            <Image x:Name="AdminItemsCounterBackground"
                                   Opacity="1" 
                                   Source="RedRoundedSquare.jpg"
                                   WidthRequest="150"/>
                            <Label x:Name="AdminCounterLabel"
                                   Text="0" 
                                   HorizontalOptions="Center"
                                   FontSize="80" 
                                   VerticalOptions="CenterAndExpand"
                                   TextColor="Black"/>
                        </Grid>
                    </Grid>
                </Grid>

            </Grid>
            <Grid x:Name="Footer"
                     Grid.Row="2">
                <StackLayout  x:Name="FooterText_1"
                              Orientation="Horizontal" 
                              HorizontalOptions="Center">
                    <Label x:Name="FooterText_1Label"
                        Text="TAPER ICI VOTRE PORTE-CLÉ TINNG! POUR PROCÉDER AU PAIEMENT." 
                           FontSize="Body"
                           TextColor="Black"
                           LineBreakMode="NoWrap"/>
                    <Image Source="key_blue.png">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="FooterIcon_Tapped"/>
                        </Image.GestureRecognizers>
                    </Image>
                </StackLayout>
                <Label x:Name="FooterText_2"
                           Text="©2020 Tinngs, tous droits réservés" 
                           FontSize="Small"
                           TextColor="Black"
                       HorizontalTextAlignment="center"/>

            </Grid>
    </Grid>
        <Grid x:Name="TestScreen" 
                      BackgroundColor="LightGreen"
                      IsVisible="false">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label 
                            x:Name="ReportArea1Label" 
                            BackgroundColor="White"
                            FontSize="14"
                            Grid.Column="0"
                            Grid.Row="0"
                            Margin="20, 20, 0, 20"/>
            <Label 
                            x:Name="ReportArea2Label" 
                            BackgroundColor="White"
                            FontSize="14"
                            Grid.Column="0"
                            Grid.Row="1"
                            Margin="20, 0, 0, 20"/>
            <StackLayout 
                Grid.Column="1" 
                Grid.RowSpan="2">
                <Button 
                            x:Name="TestButton1" 
                            Text="Test 1" 
                            Clicked="TestButtonButton1_Clicked"
                            HeightRequest="40"
                            WidthRequest="150" 
                            HorizontalOptions="Center"/>
                <Button 
                            x:Name="TestButton2" 
                            Text="Test 2" 
                            Clicked="TestButtonButton2_Clicked"
                            HeightRequest="40"
                            WidthRequest="150" 
                            HorizontalOptions="Center"/>
                <Button 
                            x:Name="ScanRfidButton2" 
                            Text="Scan Rfid 2" 
                            Clicked="ScanRfidButton2_Clicked"
                            HeightRequest="40"
                            WidthRequest="150" 
                            HorizontalOptions="Center"/>
                <Button 
                            x:Name="ReconnectButton" 
                            Text="Reconnect" 
                            Clicked="ReconnectButton_Clicked"
                            HeightRequest="40"
                            WidthRequest="150" 
                            HorizontalOptions="Center"/>
                <Button 
                            x:Name="ScanButton" 
                            Text="Scan" 
                            BackgroundColor="Gold"
                            Clicked="ScanButton_Clicked"
                            HeightRequest="40"
                            WidthRequest="150" 
                            HorizontalOptions="Center"/>
                <Button 
                            x:Name="CancelScanButton" 
                            Text="Cancel Scan" 
                            BackgroundColor="Gold"
                            Clicked="CancelScanButton_Clicked"
                            HeightRequest="40"
                            WidthRequest="150" 
                            HorizontalOptions="Center"/>
                <Button 
                            x:Name="CancelSessionButton" 
                            Text="Cancel Session" 
                            BackgroundColor="Gold"
                            Clicked="CancelSessionButton_Clicked"
                            HeightRequest="40"
                            WidthRequest="150" 
                            HorizontalOptions="Center"/>
                <Button 
                            x:Name="AuthorizeButton" 
                            Text="Authorize User" 
                            BackgroundColor="Gold"
                            Clicked="AuthorizeButton_Clicked"
                            HeightRequest="40"
                            WidthRequest="150" 
                            HorizontalOptions="Center"/>
                <Button 
                            x:Name="BuyCreditButton" 
                            Text="Buy Credit" 
                            BackgroundColor="Gold"
                            Clicked="BuyCreditButton_Clicked"
                            HeightRequest="40"
                            WidthRequest="150" 
                            HorizontalOptions="Center"/>
                <Button 
                            x:Name="FinishSessionButton" 
                            Text="Finish Session" 
                            BackgroundColor="Gold"
                            Clicked="FinishSessionButton_Clicked"
                            HeightRequest="40"
                            WidthRequest="150" 
                            HorizontalOptions="Center"/>
                <Button 
                            x:Name="ScanTag1" 
                            Text="Scan Tag 1" 
                            BackgroundColor="Pink"
                            Clicked="ScanTag1_Clicked"
                            HeightRequest="40"
                            WidthRequest="150" 
                            HorizontalOptions="Center"/>
                <Button 
                            x:Name="ScanTag2" 
                            Text="Scan Tag 2" 
                            BackgroundColor="Pink"
                            Clicked="ScanTag2_Clicked"
                            HeightRequest="40"
                            WidthRequest="150" 
                            HorizontalOptions="Center"/>
                <Button 
                            x:Name="CancelTag1" 
                            Text="Cancel Tag 1" 
                            BackgroundColor="Pink"
                            Clicked="CancelTag1_Clicked"
                            HeightRequest="40"
                            WidthRequest="150" 
                            HorizontalOptions="Center"/>
                <Button 
                            x:Name="CancelTag2" 
                            Text="Cancel Tag 2" 
                            BackgroundColor="Pink"
                            Clicked="CancelTag2_Clicked"
                            HeightRequest="40"
                            WidthRequest="150" 
                            HorizontalOptions="Center"/>
                <Button 
                            x:Name="WrongTagButton" 
                            Text="Wrong Tag" 
                            BackgroundColor="Pink"
                            Clicked="WrongTagButton_Clicked"
                            HeightRequest="40"
                            WidthRequest="150" 
                            HorizontalOptions="Center"/>
            </StackLayout>
        </Grid>

    </Grid>
</ContentPage>
