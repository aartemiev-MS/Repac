                                   VerticalOptions="Start"
                                   HorizontalOptions="Center"
                                   WidthRequest="300"
                                   HeightRequest="75"
                                   VerticalTextAlignment="Center"
                                   HorizontalTextAlignment="Center"
                                   TextColor="black"
                                   BackgroundColor="White"/>
                        </Frame>
                        <Image x:Name="ContainersNumberIcon" Source="blackContainer.png" WidthRequest="50" Margin="10,0,0,0" HorizontalOptions="Start"/>

