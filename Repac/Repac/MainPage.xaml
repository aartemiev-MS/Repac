                               VerticalOptions="Start"
                               HorizontalOptions="Center"
                               WidthRequest="300"
                                   HeightRequest="75"
                                   VerticalTextAlignment="Center"
                               HorizontalTextAlignment="Center"
                               TextColor="black"
                               BackgroundColor="#8dc73f"/>
