                               HorizontalOptions="End"
                               VerticalOptions="Center"    
                               WidthRequest="150">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="SmallKeyboardClicked"/>
                        </Image.GestureRecognizers>
                    </Image>

                </Grid>
                
                <Grid x:Name="ThirdScreenMain"
                      IsVisible="false">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="7*"/>
                        <ColumnDefinition Width="10*"/>
                    </Grid.ColumnDefinitions>

                    <StackLayout Grid.Column="0"
                                 Margin="0,0,0,0"
                                 VerticalOptions="Center">
                        <Grid>
                            <Button x:Name="ThirdScreenItemsCounter"
                                    TextColor="#646464"
                                    HorizontalOptions="Center" 
                                    BorderWidth="2"
                                    BorderColor="#646464"
                                    CornerRadius="25"
                                    WidthRequest="325"
                                    HeightRequest="325"
                                    Text="1"
                                    FontSize="200"
                                    BackgroundColor="White"/>
