                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Image x:Name="KeyAdminSlide"  Source="Key_black.png" HeightRequest="50"/>
                        </StackLayout>
                    </StackLayout>
                    <StackLayout HorizontalOptions="End">
                        <Label TextColor="Black" FontSize="20" Text="Tout annuler"
                               HorizontalOptions="Center"/>
                        <Frame BorderColor="Black"
                               CornerRadius="20">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="CancelAllScansButtonClicked"/>
                            </Frame.GestureRecognizers>
                            <Image Source="redCross.png"
                                   WidthRequest="70"
                                   HorizontalOptions="Center">
                            </Image>
                        </Frame>
                    </StackLayout>
                    <Grid Grid.Column="1" 
                          HorizontalOptions="Center"  
                          VerticalOptions="Center"
                          HeightRequest="325"
                          WidthRequest="325">
                        <Frame CornerRadius="25" Padding="0">
                            <magic:GradientView VerticalOptions="FillAndExpand">
                                <magic:GradientView.GradientSource>
                                    <magic:RadialGradient Center="0.5,0.5" RadiusX="200" RadiusY="200">
                                        <magic:GradientStop Color="#F5CDCF" Offset="0" />
                                        <magic:GradientStop Color="#DA3681" Offset="1" />
                                    </magic:RadialGradient>
                                </magic:GradientView.GradientSource>
                            </magic:GradientView>
                        </Frame>
                        <Button x:Name="AdminScreenCounter" 
                                HorizontalOptions="Center" 
                                VerticalOptions="Center" 
                                BorderWidth="3"
                                BorderColor="Black"
                                BackgroundColor="Transparent"
                                TextColor="black"
                                CornerRadius="25"
                                WidthRequest="325"
                                HeightRequest="325"
                                Text="0"
                                FontSize="200"/>
                    </Grid>

                </Grid>
            </Grid>

            <Grid x:Name="ThirdScreenTakeOut" IsVisible="false"  Grid.RowSpan="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <StackLayout>
                    <Image Source="logo_tinng.png"  
                           x:Name="HeaderLogoScreenThreeTakeOut"
                           HorizontalOptions="Center"
                           Margin="40,0,0,0"
                           WidthRequest="325"
                           Grid.Row="0"/>
                    <Grid>
                        <Frame BorderColor="black" 
                               Padding="1" 
                               HorizontalOptions="End">
